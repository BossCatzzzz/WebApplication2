@model IEnumerable<WebTinTuc.Models.TheLoaiTin>

@{
    ViewBag.Title = "Index";
}

<h2>THỂ LOẠI TIN TỨC</h2>

<p>
    @Html.ActionLink("Thêm mới", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Mã loại
        </th>
        <th>
            Tên loại
        </th>

        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.MaLoai)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.TenTheLoai)
    </td>
    <td>
        @Html.ActionLink("Sửa", "Edit", new { id = item.MaLoai }) |
        @Html.ActionLink("Chi tiết", "Details", new { id = item.MaLoai }) |
        @Html.ActionLink("Xóa", "Delete", new { id = item.MaLoai }, new { onclick = "return confirm('Bạn có chắc muốn xóa không?');" });
    </td>
</tr>
}

</table>
